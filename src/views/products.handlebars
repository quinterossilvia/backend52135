<h2 class="d-flex justify-content-center p-2" >Products</h2>

<a href="/form-products">Crear Productos</a>
<hr>

<table class="container">
    <thead>
        <tr>

            <td>Title</td>
            <td>Description</td>
            <td>Price</td>
            <td>Thumbnail</td>
            <td>Code</td>
            <td>Stock</td>
            <td>Category</td>
        </tr>
    </thead>
    <tbody>
        {{#each products}}

        <div class="card" style="width: 18rem;">
            <img src="{{thumbnail}}" width= "200px "class="card-img-top" alt="img- {{thumbnail}}">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{description}}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{price}}</li>
                <li class="list-group-item">{{stock}}</li>
                <li class="list-group-item">{{category}}</li>
            </ul>
            
        </div>
        <tr>
            <td>{{this.code}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.image}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.category}}</td>



        </tr>
        {{/each}}
    </tbody>
</table>